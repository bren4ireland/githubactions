

@inherits LayoutComponentBase
@using MyBlazorApp.Components.Layout

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-end align-items-center">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="btn btn-link">About</a>
        </div>
        <article class="content px-4">
            @Body
        </article>
        <footer class="text-center py-3 mt-4 border-top">
            <small>&copy; 2025 MyBlazorApp. All rights reserved.</small>
        </footer>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
